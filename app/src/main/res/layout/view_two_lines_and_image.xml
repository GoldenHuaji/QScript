<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_with_two_lines_and_image_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_trans_border_ripple"
    android:clickable="true"
    android:focusable="true"
    android:gravity="start|top"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingTop="18dp"
    android:paddingRight="0dp"
    android:paddingBottom="18dp">

    <ImageView
        android:id="@+id/view_with_two_lines_and_image_iv"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/nothing"
        android:scaleType="fitXY"
        android:tint="@color/themeColor"
        tools:ignore="UseAppTint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_with_two_lines_and_image_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/nothing"
                android:textColor="@color/firstTextColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/view_with_two_lines_and_image_tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="@string/nothing"
                android:textColor="@color/thirdTextColor"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/view_with_two_lines_and_image_ivArrow"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/nothing"
            android:scaleType="fitXY"
            android:src="@drawable/ic_next"
            tools:ignore="UseAppTint" />
    </LinearLayout>
</LinearLayout>